function [ Col ] = seekColumns( I, Lignes )

    [line,col] = size(I);
    
    lineI=size(Lignes);
    Col = zeros(lineI,40);
    
    p=1;
    j=1;
    
    %- Entre les deux lignes -%
    for i=Lignes(j,1):Lignes(j,2)
        
        IA = I(Lignes(j,1):Lignes(j,2), 1:2812);
         S = sum(IA);
         
         %-- Parcours des columns de la sous image --%
         while k <= col 
             
             if S(k) ~= 0
                Col(j,p) = k;
                
                while ( S(k) ~= 0 && k <= col )
                
                    k = k+1;
                end
                
                if k <= col
                    p = p+1;
                    Col(j,p) =k;
                    p = p+1;
                end
             
             
             end
             
             
             
             k = k + 1;
         end
         
    end
    
    
    %-- Code d'avant --%
    while i <= line
        
         if S(i) ~= 0 
            Lignes(p,1) = i;

            while ( S(i) ~= 0 && i <= line ) 
               i=i+1;
            end

            if i<= line 
                Lignes(p,2) = i;
                p = p+1;
            end
         end

         i= i +1;
    end
    
   



end

